<local:ABaseUi x:Class="DiceWars.UiElements.GameUi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiceWars.UiElements"
             Height="520" 
             Width="1000">
    <local:DWDockPanel>
        <local:DWGrid>

            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="400*"/>
            </Grid.RowDefinitions>

            <local:DWStackPanel x:Name="playersStackPanel" Grid.Row="0" Orientation="Horizontal"/>
            <local:BoardUi x:Name="boardUi" Grid.Row="1"/>

        </local:DWGrid>
    </local:DWDockPanel>
</local:ABaseUi>
